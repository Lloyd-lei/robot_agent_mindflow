# Unitree G1 Voice Agent - Docker 部署配置
# 基于 qiayuanl/unitree:jazzy-latest

FROM qiayuanl/unitree:jazzy-latest

# 设置工作目录
WORKDIR /workspace

# 安装 Python 依赖
RUN apt-get update && apt-get install -y \
    python3-pip \
    python3-venv \
    portaudio19-dev \
    python3-pyaudio \
    alsa-utils \
    && rm -rf /var/lib/apt/lists/*

# 复制项目文件
COPY requirements.txt /workspace/
RUN pip3 install --no-cache-dir -r requirements.txt

# 复制整个项目
COPY . /workspace/agent_mvp/

# 设置权限
RUN chmod +x /workspace/agent_mvp/*.sh || true

# 设置环境变量
ENV PYTHONUNBUFFERED=1
ENV PYTHONIOENCODING=utf-8

# 默认命令
CMD ["/bin/bash"]

